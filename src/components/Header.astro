---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import Search from './Search.astro';
import SocialLinks from './SocialLinks.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header
	class="m-0 bg-white/90 dark:bg-gray-900/90 shadow-sm backdrop-blur-sm transition-colors duration-300 sticky top-0 z-50"
>
	<nav
		class="flex flex-wrap items-center gap-4 py-4 mx-auto w-[960px] max-w-[calc(100%-2em)]"
	>
		<div class="w-full md:w-auto flex items-center md:mr-8">
			<h2 class="m-0 text-lg md:text-xl font-bold shrink-0">
				<a
					href="/"
					class="text-black dark:text-white no-underline hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
					>{SITE_TITLE}</a
				>
			</h2>
		</div>

		<div
			class="flex flex-wrap gap-2 md:gap-4 internal-links text-sm md:text-base order-2"
		>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div class="flex gap-2 items-center shrink-0 order-3 ml-auto md:ml-0">
			<Search />
			<ThemeToggle />
		</div>

		<div class="hidden md:flex gap-2 social-links order-4 ml-auto">
			<SocialLinks />
		</div>
	</nav>
</header>
