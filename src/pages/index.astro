---
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: SITE_TITLE,
  description: SITE_DESCRIPTION,
  url: Astro.site?.toString() || Astro.url.origin,

  publisher: {
    '@type': 'Organization',
    name: SITE_TITLE,
  },
};
---

<BaseLayout structuredData={structuredData}>
	<main class="max-w-4xl mx-auto px-4 py-8">
		<section class="mb-12 text-center md:text-left">
			<h1 class="text-4xl font-bold mb-4">Milkmaccya's Log</h1>
			<p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
				Tea break & Life Log. 日々の生活や考えたことを記録しています。
			</p>
			<div
				class="flex flex-col md:flex-row gap-4 justify-center md:justify-start"
			>
				<a
					href="/about"
					class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 dark:bg-white dark:text-black dark:hover:bg-gray-200 transition text-center"
				>
					About Me
				</a>
				<a
					href="/blog"
					class="px-6 py-2 border border-black text-black rounded-lg hover:bg-gray-100 dark:border-white dark:text-white dark:hover:bg-gray-800 transition text-center"
				>
					Read Blog
				</a>
			</div>
		</section>

		<section>
			<h2 class="text-2xl font-bold mb-6 border-b pb-2">Recent Posts</h2>
			<ul class="space-y-6">
				{
					posts.map((post) => (
						<li class="group">
							<a
								href={`/blog/${post.id}/`}
								class="block p-4 -mx-4 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800 transition"
							>
								<h3 class="text-xl font-semibold text-black dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition mb-1">
									{post.data.title}
								</h3>
								<p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
									<FormattedDate date={post.data.pubDate} />
								</p>
								{post.data.description && (
									<p class="text-gray-600 dark:text-gray-300 line-clamp-2">
										{post.data.description}
									</p>
								)}
							</a>
						</li>
					))
				}
			</ul>
			<div class="mt-8 text-center md:text-left">
				<a
					href="/blog"
					class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium"
				>
					All Posts &rarr;
				</a>
			</div>
		</section>
	</main>
</BaseLayout>
